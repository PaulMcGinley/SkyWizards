<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AutoPatcherAdmin.MainWindow"
        Title="AutoPatcherAdmin"
        Width="400"
        Height="400">
    <Grid RowDefinitions="*, Auto">
        <!-- Checkbox List -->
        <ListBox Name="CheckBoxList" Grid.Row="0" />

        <!-- Buttons at the bottom -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
            <Button Name="NewConfigButton" Content="New Job" Margin="10,0,10,0" Click="NewConfigButton_OnClick"/>
            <Button Name="EditButton" Content="Edit Job" Margin="10,0,10,0" Click="EditButton_OnClick"/>
            <Button Name="RunSelectedButton" Content="Run Selected" Margin="10,0,10,0" />
        </StackPanel>
    </Grid>
</Window>