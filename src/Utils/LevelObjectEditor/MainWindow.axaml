<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
        x:Class="LevelObjectEditor.MainWindow"
        Title="LevelObjectEditor">
    <DockPanel>
        <Menu DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <MenuItem Header="Object" FontWeight="Bold">
                <MenuItem Header="New" Click="mnuNew_Click"/>
                <Separator/>
                <MenuItem Header="Open" Click="mnuOpen_Click"/>
                <Separator/>
                <MenuItem Header="Save" Click="mnuSave_Click"/>
                <MenuItem Header="Save As" Click="mnuSaveAs_Click"/>
                <Separator/>
                <MenuItem Header="Close" Click="mnuClose_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="mnuExit_Click"/>
            </MenuItem>
            <MenuItem Header="Change Library" Click="mnuFind_Click">
            </MenuItem>
            <MenuItem x:Name="lbLibraryPath" Header="No library selected" Click="LbLibraryPath_Click"/>
        </Menu>

        <!-- Main content area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/> <!-- Left column locked width -->
                <ColumnDefinition Width="*"/>   <!-- Middle column takes remaining space -->
                <ColumnDefinition Width="250"/> <!-- Right column locked width for layers list -->
            </Grid.ColumnDefinitions>

            <!-- List of text in the left column -->
            <StackPanel Grid.Column="0" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="X" Margin="5" Grid.Column="0" Grid.Row="0"/>
                    <TextBlock x:Name="lbX" Text="" Margin="5" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right"/>
                    <TextBlock Text="Y" Margin="5" Grid.Column="0" Grid.Row="1"/>
                    <TextBlock x:Name="lbY" Text="" Margin="5" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right"/>
                    <TextBlock Text="Width" Margin="5" Grid.Column="0" Grid.Row="2"/>
                    <TextBlock x:Name="lbWidth" Text="" Margin="5" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"/>
                    <TextBlock Text="Height" Margin="5" Grid.Column="0" Grid.Row="3"/>
                    <TextBlock x:Name="lbHeight" Text="" Margin="5" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right"/>
                    <Button Content="Back Image" Margin="0" Grid.Column="0" Grid.Row="4" Click="btnSelectImage_Click"/>
                    <TextBlock x:Name="lbImageIndex" Text="-1" Margin="5" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right"/>
                    <Button Content="Front Image" Margin="0" Grid.Column="0" Grid.Row="5" Click="btnSelectImage_Click"/>
                    <TextBlock x:Name="lbFrontIndex" Text="-1" Margin="5" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Image column with white background and menu at the top -->
            <Border Grid.Column="1" Margin="0">
                <DockPanel>
                    <Menu DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1,0,1,1">
                        <MenuItem Header="..." IsEnabled="False">
                            <MenuItem Header="Move"/>
                            <MenuItem Header="Remove"/>
                            <MenuItem Header="Replace"/>
                            <Separator/>
                            <MenuItem Header="Trim Whitespace"/>
                            <MenuItem Header="Remove Exif Data"/>
                            <TextBox Text="Remove Exif Data"/>
                        </MenuItem>
                        <MenuItem x:Name="MnuToggleSequencer" Header="○" Click="mnuToggleSequencer_Click" ToolTip.Tip="Toggle Sequencer"/>
                    </Menu>
                    <!-- Animation Panel -->
                    <DockPanel LastChildFill="True">
                        <Border x:Name="AnimationPanel" DockPanel.Dock="Bottom" BorderBrush="Gray" BorderThickness="1,1,1,0" Height="250">
                            <DockPanel>
                                <Slider DockPanel.Dock="Top" Minimum="0" Maximum="100" Value="50" Margin="0,-10,0,0"/>
                                <!-- <TextBlock Text="Animation Timeline" VerticalAlignment="Center" HorizontalAlignment="Center"/> -->

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                    <TextBlock Text="Index:" VerticalAlignment="Center" Margin="5"/>
                                    <ComboBox Width="100" Margin="5"/>
                                    <TextBlock Text="Start Index:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Width="50" Margin="5"/>
                                    <TextBlock Text="End Index:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Width="50" Margin="5"/>
                                </StackPanel>
                                
                            </DockPanel>
                        </Border>
                        <Canvas x:Name="ImageCanvas" Background="Silver" DockPanel.Dock="Top">
                            <Image x:Name="Preview" Margin="5"/>
                        </Canvas>
                    </DockPanel>
                </DockPanel>
            </Border>

            <!-- Layers list in the right column with a menu at the bottom -->
            <DockPanel Grid.Column="2" Margin="-11,-5,-11, 0">
                <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="ContentTabs_SelectionChanged">
                    <TabItem Header="Graphics" FontSize="16" Padding="45,0,15,0">
                        <DockPanel HorizontalAlignment="Stretch">
                            <Menu DockPanel.Dock="Bottom" BorderBrush="Gray" BorderThickness="0,1,0,0">
                                <MenuItem Header="+" ToolTip.Tip="Add new layer" Click="mnuNewGraphicsLayer_Click" />
                                <MenuItem Header="-" ToolTip.Tip="Remove selected layer" Click="mnuRemoveGraphicsLayer_Click"/>
                                <MenuItem Header="▲" ToolTip.Tip="Move selected layer up" Click="mnuMoveGraphicsLayerUp_Click"/>
                                <MenuItem Header="▼" ToolTip.Tip="Move selected layer down" Click="mnuMoveGraphicsLayerDown_Click"/>
                                <MenuItem Header="ƒ×" ToolTip.Tip="Layer Effects" Click="mnuGraphicsLayerEffects_Click"/>
                            </Menu>
                            <ScrollViewer DockPanel.Dock="Top">
                                <ListBox x:Name="LayersList" SelectionChanged="LayersList_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <ContentPresenter Content="{Binding}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>

                    <TabItem Header="Boundaries" FontSize="16">
                        <DockPanel HorizontalAlignment="Stretch">
                            <Menu DockPanel.Dock="Bottom" BorderBrush="Gray" BorderThickness="0,1,0,0">
                                <MenuItem Header="+" ToolTip.Tip="Add new layer" Click="mnuNewBoundaryLayer_Click" />
                                <MenuItem Header="-" ToolTip.Tip="Remove selected layer" Click="mnuRemoveBoundaryLayer_Click"/>
                                <MenuItem Header="▲" ToolTip.Tip="Move selected layer up"/>
                                <MenuItem Header="▼" ToolTip.Tip="Move selected layer down"/>
                                <MenuItem Header="ƒ°" ToolTip.Tip="Events"/>
                            </Menu>
                            <ScrollViewer DockPanel.Dock="Top">
                                <ListBox x:Name="BoundaryLayersList" BorderBrush="Gray" BorderThickness="0,0,0,0">
                                    <!-- Entries appear here: -->
                                </ListBox>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>